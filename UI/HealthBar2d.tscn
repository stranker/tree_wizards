[sub_resource type="GDScript" id=3]
script/source = "extends ProgressBar

onready var player_camera : Camera = get_tree().root.get_node(\"Test/MainCamera\")

export var offset : Vector2 = Vector2(0,2)

var enemy = null


func set_health(health):
	value = health
	max_value = value

func take_damage(dmg):
	value -= dmg
	pass

func set_target(target):
	enemy = target
	set_health(enemy.health)
	enemy.connect(\"take_damage\", self, \"take_damage\")
	pass

func _process(delta):
	if !enemy:
		return
	update_position()
	pass

func update_position():
	var pos = player_camera.unproject_position(enemy.transform.origin)
	rect_global_position = pos + offset
	pass
"

